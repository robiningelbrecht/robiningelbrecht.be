<body class="font-display font-normal text-primary">
<nav class="absolute py-8 top-0 left-0 w-full z-50 bg-none text-white">
    <div class="container flex justify-between items-center">
        <a href="#home" class="flex items-center gap-x-2 text-xl font-extrabold uppercase tracking-wide">
            <img src="assets/logo.png" class="rounded-full w-[28px] " alt="logo">
            <span>Robin</span>
        </a>
        <ul class="nav hidden sm:flex gap-x-10">
            <li><a href="#home" class="nav-link">Home</a></li>
            <li><a href="#blog" class="nav-link">Blog</a></li>
            <li><a href="#projects" class="nav-link">Projects</a></li>
        </ul>
    </div>
</nav>
<header id="home" class="text-white flex items-center h-screen bg-cover bg-[top_center] relative overflow-hidden"
        style="background-image: url(assets/bg.jpg);">
    <div class="flex flex-col items-center w-full mx-4 text-center z-20">
        <h2 class="text-[30px] md:text-[50px] mb-2.5">Hello there!</h2>
        <div class="typed-strings hidden">
            <p>Robin Ingelbrecht</p>
            <p>a dad</p>
            <p>a developer</p>
            <p>an open source enthusiast</p>
            <p>an amateur cyclist</p>
        </div>
        <h1 class="font-extralight text-base sm:text-[30px] sm:leading-[36px] md:text-[44px] md:leading-[50px] lg:text-[60px] lg:leading-[66px]">
            I am <b class="typed"></b>
        </h1>
        <ul class="mt-7 flex gap-x-1">
            <li>
                <a href="https://github.com/robiningelbrecht">
                    <span>
                        <i class="fa fa-github rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
                </a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/robin-ingelbrecht/">
                    <span>
                        <i class="fa fa-linkedin rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
                </a>
            </li>
            <li>
                <a href="https://ingelbrechtrobin.medium.com/">
                    <span>
                        <i class="fa fa-medium rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
                </a>
            </li>
        </ul>
    </div>
</header>

<section id="blog" class="py-24">
    <div class="container">
        <h3>Latest blog posts.</h3>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-7">
            {% for blogPost in blogPosts %}
                <div class="shadow-[0px_10px_30px_-8px_rgba(0,_0,_0,_0.1)]">
                    <div class="overflow-hidden">
                        <img class="w-full h-[170px] object-cover transition-all duration-500 hover:scale-125"
                             src="{{ blogPost.getImage() }}"/>
                    </div>
                    <div class="my-5 mx-4">
                        <div class="mb-2.5 text-sm font-semibold text-light-grey">
                            {{ blogPost.getPubDate().format('D M d Y, H:i') }}
                        </div>
                        <h4 class="mb-3 h-[67px] overflow-hidden">
                            <a href="{{ blogPost.getLink() }}">{{ blogPost.getTitle()|raw }}</a>
                        </h4>
                        <span class="text-base border-b-2 border-primary">
                            <a href="{{ blogPost.getLink() }}">Read More</a>
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<section id="projects" class="bg-alternate py-24">
    <div class="container">
        <h3>Projects.</h3>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-7">
            {% for repo in repos %}
                <div class="flex items-center flex-col bg-white px-5 py-9 text-center rounded-md shadow-[0px_10px_30px_-8px_rgba(0,_0,_0,_0.1)]">
                    <a class="mb-3.5" href="{{ repo.url }}">
                        <h4>{{ repo.name }}</h4>
                    </a>
                    <div class="flex items-center">
                        <svg height="16" viewBox="0 0 16 16"
                             width="16" data-view-component="true">
                            <path fill-rule="evenodd" fill="#F1C300"
                                  d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25zm0 2.445L6.615 5.5a.75.75 0 01-.564.41l-3.097.45 2.24 2.184a.75.75 0 01.216.664l-.528 3.084 2.769-1.456a.75.75 0 01.698 0l2.77 1.456-.53-3.084a.75.75 0 01.216-.664l2.24-2.183-3.096-.45a.75.75 0 01-.564-.41L8 2.694v.001z"></path>
                        </svg>
                        <span class="text-sm">{{ repo.stars }}</span>
                    </div>
                    <p class="text-base text-light-grey">{{ repo.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<footer class="flex items-center justify-center bg-primary py-3">
    <ul class="flex gap-x-2 text-center">
        <li>
            <a href="https://github.com/robiningelbrecht">
                    <span>
                        <i class="fa fa-github rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
            </a>
        </li>
        <li>
            <a href="https://www.linkedin.com/in/robin-ingelbrecht/">
                    <span>
                        <i class="fa fa-linkedin rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
            </a>
        </li>
        <li>
            <a href="https://ingelbrechtrobin.medium.com/">
                    <span>
                        <i class="fa fa-medium rounded-full bg-[rgba(255,_255,_255,_0.3)] w-[35px] h-[35px] leading-[35px]"
                           aria-hidden="true"></i>
                    </span>
            </a>
        </li>
    </ul>
</footer>

<script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
<script>
    window.addEventListener('load', function (event) {
        new Typed('.typed', {
            stringsElement: '.typed-strings',
            loop: true,
            typeSpeed: 20,
            backSpeed: 20,
            backDelay: 2000,
        });

        // Select elements
        const navbar = document.querySelector("nav");
        const header = document.querySelector("header");
        const h_height = header.offsetHeight;

        // Add scroll event listener
        window.addEventListener("scroll", function () {
            const bodyScroll = window.scrollY;
            if (bodyScroll > 96) {
                navbar.classList.add("nav-scroll");
            } else {
                navbar.classList.remove("nav-scroll");
            }
        });
    });
</script>

<script data-name="BMC-Widget" data-cfasync="false" src="https://cdnjs.buymeacoffee.com/1.0.0/widget.prod.min.js"
        data-id="ingelbrecht" data-description="Support me on Buy me a coffee!" data-message="" data-color="#5F7FFF"
        data-position="Right" data-x_margin="18" data-y_margin="18"></script>

