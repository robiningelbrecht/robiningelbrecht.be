<body class="font-display font-normal text-base">
<nav class="absolute py-8 top-0 left-0 w-full z-50 bg-none text-white">
    <div class="container flex justify-between items-center">
        <a href="#" class="text-xl font-extrabold uppercase tracking-wide">Robin</a>
        <ul class="nav hidden sm:flex gap-x-10">
            <li><a href="#home" class="nav-link">Home</a></li>
            <li><a href="#blog" class="nav-link">Blog</a></li>
            <li><a href="#projects" class="nav-link">Projects</a></li>
        </ul>
    </div>
</nav>
<header id="home" class="text-white flex items-center h-screen bg-cover bg-[top_center] relative overflow-hidden" style="background-image: url(assets/bg.jpg);">
    <div class="w-full text-center z-20">
        <h5>Hello there!</h5>
        <div class="typed-strings">
            <p>Robin Ingelbrecht</p>
            <p>a dad</p>
            <p>a developer</p>
            <p>an open source enthusiast</p>
            <p>an amateur cyclist</p>
        </div>
        <h1>I am <b class="typed"></b></h1>
        <div>
            <a href="https://github.com/robiningelbrecht">
                <span><i class="fa fa-github" aria-hidden="true"></i></span>
            </a>
            <a href="https://www.linkedin.com/in/robin-ingelbrecht/">
                <span><i class="fa fa-linkedin" aria-hidden="true"></i></span>
            </a>
            <a href="https://ingelbrechtrobin.medium.com/">
                <span><i class="fa fa-medium" aria-hidden="true"></i></span>
            </a>
        </div>
    </div>
</header>

<section id="blog">
    <div class="container">
        <div class="row">

            <!-- section heading -->
            <div class="section-head">
                <h3>Latest blog posts.</h3>
            </div>

            <div class="row">
                {% for blogPost in blogPosts %}
                    <div class="blog-post">
                        <img src="{{ blogPost.getImage() }}"/>
                        <div class="content">
                            <h6 class="tag">
                                <a href="#0">{{ blogPost.getPubDate().format('D M d Y, H:i') }}</a>
                            </h6>
                            <h4>
                                <a href="{{ blogPost.getLink() }}">{{ blogPost.getTitle()|raw }}</a>
                            </h4>
                            <span class="more">
										<a href="{{ blogPost.getLink() }}">Read More</a>
									</span>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div><!-- /row -->
    </div><!-- /container -->
</section>
<section id="projects">
    <div class="container">

        <!-- section heading -->
        <div class="section-head">
            <h3>Projects.</h3>
        </div>

        <div class="row">
            {% for repo in repos %}
                <div class="repo">
                    <a href="{{ repo.url }}"
                       target="_blank"><h3>{{ repo.name }}</h3></a>
                    <div class="meta">
                        {% if repo.language %}
                            <code>{{ repo.language|upper }}</code>
                        {% endif %}
                        {% for topic in repo.topics %}
                            <code>{{ topic|upper }}</code>
                        {% endfor %}
                        <div class="stars">
                            <svg height="16" viewBox="0 0 16 16"
                                 width="16" data-view-component="true">
                                <path fill-rule="evenodd" fill="#F1C300"
                                      d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25zm0 2.445L6.615 5.5a.75.75 0 01-.564.41l-3.097.45 2.24 2.184a.75.75 0 01.216.664l-.528 3.084 2.769-1.456a.75.75 0 01.698 0l2.77 1.456-.53-3.084a.75.75 0 01.216-.664l2.24-2.183-3.096-.45a.75.75 0 01-.564-.41L8 2.694v.001z"></path>
                            </svg>
                            {{ repo.stars }}
                        </div>
                    </div>

                    <p>{{ repo.description }}</p>
                </div>
            {% endfor %}
        </div><!-- /row -->
    </div><!-- /container -->
</section>
<footer>

</footer>

<script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
<script>
    window.addEventListener('load', function(event) {
        new Typed('.typed', {
            stringsElement: '.typed-strings',
            loop: true,
            typeSpeed: 20,
            backSpeed: 20,
            backDelay: 2000,
        });

        // Select elements
        const navbar = document.querySelector("nav");
        const header = document.querySelector("header");
        const h_height = header.offsetHeight;

        // Add scroll event listener
        window.addEventListener("scroll", function () {
            const bodyScroll = window.scrollY;
            if (bodyScroll > 100) {
                navbar.classList.add("nav-scroll");
            } else {
                navbar.classList.remove("nav-scroll");
            }
        });
    });
</script>

<script data-name="BMC-Widget" data-cfasync="false" src="https://cdnjs.buymeacoffee.com/1.0.0/widget.prod.min.js"
        data-id="ingelbrecht" data-description="Support me on Buy me a coffee!" data-message="" data-color="#5F7FFF"
        data-position="Right" data-x_margin="18" data-y_margin="18"></script>

</body>
</html>
